{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "max-len": 0,
    "arrow-parens": 0,
    "indent": [2, 4],
    "space-before-function-paren": 0,
    "class-methods-use-this": [2, { "exceptMethods": ["observe"] }],
    "react/jsx-indent": [2, 4],
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx"] }],
    "react/no-array-index-key": 0
  }
}
